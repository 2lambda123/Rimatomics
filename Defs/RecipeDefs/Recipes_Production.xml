<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>
  
  <RecipeDef>
    <defName>MakeSabotDU</defName>
    <label>make sabot from DU</label>
    <description>make railgun sabot from depleted uranium</description>
    <jobString>Making Sabot Round.</jobString>
    <workAmount>400</workAmount>
    <workSkill>Crafting</workSkill>
    <workSpeedStat>SmithingSpeed</workSpeedStat>
    <effectWorking>ConstructMetal</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <unfinishedThingDef>UnfinishedGun</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>DepletedUraniumPellets</li>
          </thingDefs>
        </filter>
        <count>5</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>DepletedUraniumPellets</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <RailgunSabot>1</RailgunSabot>
    </products>
    <recipeUsers>
      <li>TableRimatomicsMachining</li>
    </recipeUsers>
    <skillRequirements>
      <li>
        <skill>Crafting</skill>
        <minLevel>10</minLevel>
      </li>
    </skillRequirements>
  </RecipeDef>

  <RecipeDef>
    <defName>SmeltBlades</defName>
    <label>smelt turbine blades</label>
    <description>Use heat and strong electromagnets to break turbine blades into useful resources.</description>
    <jobString>Smelting turbine blade.</jobString>
    <workAmount>400</workAmount>
    <workSpeedStat>SmeltingSpeed</workSpeedStat>
    <effectWorking>Smelt</effectWorking>
    <soundWorking>Recipe_Smelt</soundWorking>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>turbineBlade</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>turbineBlade</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Plasteel>1</Plasteel>
    </products>
    <recipeUsers>
      <li>ElectricSmelter</li>
    </recipeUsers>
  </RecipeDef>

