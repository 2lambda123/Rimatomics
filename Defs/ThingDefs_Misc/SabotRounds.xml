<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef Name="SabotBase" ParentName="ResourceBase" Abstract="True">
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <tickerType>Normal</tickerType>
    <stackLimit>25</stackLimit>
    <techLevel>Industrial</techLevel>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>10</MarketValue>
      <Mass>3.5</Mass>
      <Flammability>0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>SabotRounds</li>
    </thingCategories>
    <tradeTags>
      <li>SabotRounds</li>
    </tradeTags>
  </ThingDef>

  <ThingDef Name="MakeableSabotBase" ParentName="SabotBase" Abstract="True">
    <recipeMaker>
      <workSpeedStat>SmithingSpeed</workSpeedStat>
      <effectWorking>ConstructMetal</effectWorking>
      <soundWorking>Recipe_Machining</soundWorking>
      <workAmount>800</workAmount>
      <targetCountAdjustment>5</targetCountAdjustment>
      <workSkill>Crafting</workSkill>
      <recipeUsers>
        <li>TableRimatomicsMachining</li>
      </recipeUsers>
      <skillRequirements>
        <Crafting>10</Crafting>
      </skillRequirements>
    </recipeMaker>
  </ThingDef>

  <!-- STANDARD -->

  <ThingDef ParentName="MakeableSabotBase">
    <defName>RailgunSabot</defName>
    <label>Sabot Round</label>
    <description>A kinetic energy projectile fired from a railgun.</description>
    <graphicData>
      <texPath>Things/Resources/sabot</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <projectileWhenLoaded>Bullet_Sabot</projectileWhenLoaded>
    <costList>
      <Steel>20</Steel>
    </costList>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Sabot</defName>
    <label>high-explosive shell</label>
    <graphicData>
      <texPath>Things/Projectile/SabotRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>65</damageAmountBase>
      <speed>150</speed>
      <explosionRadius>3.5</explosionRadius>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>ArtilleryHitThickRoof</soundHitThickRoof>
      <soundExplode>MortarBomb_Explode</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>


  <!-- DU Sabot -->

  <ThingDef ParentName="MakeableSabotBase">
    <defName>RailgunSabotDU</defName>
    <label>DU Sabot Round</label>
    <description>A kinetic energy projectile fired from a railgun.</description>
    <graphicData>
      <texPath>Things/Resources/sabot</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <tradeability>Sellable</tradeability>
    <statBases>
      <MarketValue>1500</MarketValue>
    </statBases>
    <projectileWhenLoaded>Bullet_Sabot_DU</projectileWhenLoaded>
    <costList>
      <DepletedUraniumPellets>10</DepletedUraniumPellets>
    </costList>
  </ThingDef>

  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Sabot_DU</defName>
    <label>DU Sabot Round</label>
    <graphicData>
      <texPath>Things/Projectile/SabotRound</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <damageDef>Bomb</damageDef>
      <damageAmountBase>100</damageAmountBase>
      <speed>150</speed>
      <explosionRadius>15</explosionRadius>
      <explosionChanceToStartFire>0.22</explosionChanceToStartFire>
      <explosionDealMoreDamageAtCenter>true</explosionDealMoreDamageAtCenter>
      <explosionEffect>GiantExplosion</explosionEffect>
      <flyOverhead>true</flyOverhead>
      <soundHitThickRoof>ArtilleryHitThickRoof</soundHitThickRoof>
      <soundExplode>Explosion_GiantBomb</soundExplode>
      <soundImpactAnticipate>MortarRound_PreImpact</soundImpactAnticipate>
      <soundAmbient>MortarRound_Ambient</soundAmbient>
    </projectile>
  </ThingDef>

</Defs>
